{
	"author": "Josue Kouka",
	"manifest_version": 2,
	"name": "Cache Cleaner",
	"description": "Small extension that cleans your cache a : - hour - day - week from now.",
	"version": "1.0",

	"browser_action": {
		"default_title": "Cache Cleaner",
		"default_popup": "popup.html",
		"default_icon": "static/img/icon.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistant": false
	},
	"permissions": [
		"tabs",
		"browsingData"
	],

	"offline_enabled": true
}